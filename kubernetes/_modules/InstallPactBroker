InstallPactBroker() {
	SyncRepo

	echo -e "\nCleaning up PACT Broker..\n"

	for YAML in $(ls ../pact-broker/*.y*ml | sort -r)
	do
		echo ${YAML}
		${KUBECTL} --kubeconfig="${HOME}/${CLUSTER_NAME}-kubeconfig" delete -f ${YAML}
	done

	echo -e "\nSleeping for 60 seconds..\n"
	sleep 60

	echo -e "\nInstalling PACT Broker..\n"

	cat ../pact-broker/06-pact-broker-service.yaml.template | sed "s/PACT_BROKER_SERVICE_IP/${PACT_BROKER_SERVICE_IP}/g" > ../pact-broker/06-pact-broker-service.yaml

	for YAML in $(ls ../pact-broker/*.y*ml | sort)
	do
		echo ${YAML}
		${KUBECTL} --kubeconfig="${HOME}/${CLUSTER_NAME}-kubeconfig" create -f ${YAML}
	done

	git add ../pact-broker/06-pact-broker-service.yaml
	git commit -m "`basename $0` - Updated Pact Broker Service YAML file generated by setup script"
	git push
}
